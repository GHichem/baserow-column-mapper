###############################
# Backend Environment Variables
###############################
# Copy to .env and fill with REAL values (do NOT commit secrets)

#############################################################
# Baserow Credentials (REQUIRED)
#############################################################
BASEROW_API_TOKEN=your_api_token_here
BASEROW_USERNAME=your_username
BASEROW_PASSWORD=your_password
# Optional pre-generated JWT token (will be refreshed when using username/password)
BASEROW_JWT_TOKEN=

#############################################################
# Server Runtime
#############################################################
PORT=3050
NODE_ENV=production
# Maximum single file upload size (MB) â€“ handled via disk storage
MAX_UPLOAD_MB=500
# Maximum JSON body size (CSV uploads use multipart, so keep modest)
MAX_JSON_BODY=10mb
# Temporary directory for large uploads (default: OS temp)
# UPLOAD_TMP_DIR=/tmp/column-mapper-uploads

#############################################################
# Optional: Serve built frontend from backend
#############################################################
# Set to true ONLY if you want this backend to serve the built React app
SERVE_FRONTEND=false
# If true, path to dist folder (relative to this file or absolute)
# FRONTEND_DIST_PATH=../frontend/dist

#############################################################
# Static Baserow IDs (override if different)
#############################################################
BASEROW_SOURCE_TABLE_ID=787
BASEROW_TARGET_TABLE_ID=790
BASEROW_DATABASE_ID=207

#############################################################
# CORS (Comma-separated list of allowed origins)
#############################################################
# For production set to your real frontend URL(s)
ALLOWED_ORIGINS=http://157.180.9.225:3050,http://localhost:5173

#############################################################
# Notes
#############################################################
# 1. Never expose this file publicly.
# 2. Keep secrets out of the frontend .env (only VITE_* go to browser).
# 3. Rotate token if you suspect compromise.
# 4. Raise MAX_UPLOAD_MB only if server resources allow.
# 5. Set SERVE_FRONTEND=true only after running `npm run build` in frontend.
