# Backend Environment Variables
# Copy this file to .env and fill in your actual values
# These stay SECURE on your server - NEVER commit actual values to git!

# Your Baserow API Token (found in Account Settings > API Tokens)
BASEROW_API_TOKEN=your_api_token_here

# Your Baserow username for JWT authentication
BASEROW_USERNAME=your_username

# Your Baserow password for JWT authentication  
BASEROW_PASSWORD=your_password

# Optional: Pre-generated JWT token (expires, so username/password preferred)
BASEROW_JWT_TOKEN=

# Server configuration
PORT=3001
NODE_ENV=production

# CORS allowed origins (your frontend URLs)
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-domain.com
